<h1 class="text-center">Got milk?</h1>

<div class="text-center padded">
  <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>

  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
       <div class="col-xs-12 col-sm-6">
            <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
              <div class="flipper">
                <div class="front">
                  <div class="card text-center">
                    <% if cocktail.picture %>
                        <div class="card-header" style="background-image: url('<%= image_path cocktail.picture%>')">
                        </div>
                        <% else %>
                        <div class="card-header" style="background-image: url('http://www.seriouseats.com/images/2014/11/20141104-cocktail-party-old-fashioneds-holiday-vicky-wasik-3.jpg')">
                        </div>
                      <% end %>
                  </div>
                </div>
                  <div class="back">
                      <%= link_to cocktail.name, cocktail_path(cocktail) %>
                  </div>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>
